<div class="form-group">
  <label for="<%= item %>-col" class="form-label">Column</label>
  <select id="<%= item %>-col" class="form-control-sm <%= item %>-update"></select>
</div>
<div class="form-group">
  <label for="<%= item %>-preset" class="form-label">Preset</label>
  <select id="<%= item %>-preset" class="form-control-sm"></select>
</div>
<div class="form-group">
  <label for="<%= item %>-palette" class="form-label">Color palette</label>
  <select id="<%= item %>-palette" class="form-control-sm"></select>
</div>
<div class="form-group">
  <label for="<%= item %>-scaletype" class="form-label">Scale</label>
  <select id="<%= item %>-scaletype" class="form-control-sm <%= item %>-update"></select>
</div>
<div id="<%= item %>-domain" class="form-group row">
  <div class="col-6">
    <label for="<%= item %>-domain" class="form-label">Domain</label>
  </div>
  <div class="col-12">
    <input type="text" id="<%= item %>-domain-from" class="form-control-sm <%= item %>-update" name="<%= item %>-domain-from" size="8" value="0"/>
    <span style="margin: 0 6px"> - </span>
    <input type="text" id="<%= item %>-domain-to" class="form-control-sm <%= item %>-update" name="<%= item %>-domain-to" size="8" value="1"/>
  </div>
</div>
<div id="<%= item %>-range" class="form-group row">
  <div class="col-6">
    <label for="<%= item %>-range" class="form-label">Range</label>
  </div>
  <div class="col-12">
    <input type="color" id="<%= item %>-range-from" class="form-control-sm <%= item %>-update" name="<%= item %>-range-from" value="#000000"/>
    <span style="margin: 0 6px"> - </span>
    <input id="<%= item %>-range-enable-mid" class="form-check-inline <%= item %>-update" type="checkbox"/>
    <input type="color" id="<%= item %>-range-mid" class="form-control-sm <%= item %>-update" name="<%= item %>-range-mid" value="#999999"/>
    <span style="margin: 0 6px"> - </span>
    <input type="color" id="<%= item %>-range-to" class="form-control-sm <%= item %>-update" name="<%= item %>-range-to" value="#ffffff"/>
  </div>
</div>
